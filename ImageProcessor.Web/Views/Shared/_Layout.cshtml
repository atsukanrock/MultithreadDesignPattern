<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Image Processor</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Content/Site.css" asp-append-version="true" />
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.UtcNow.Year - Image Processor</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js" asp-append-version="true"></script>
    <script src="~/Scripts/bootstrap.min.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
