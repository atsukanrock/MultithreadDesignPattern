<Application x:Class="ImageProcessor.Admin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ImageProcessor.Admin.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <SolidColorBrush x:Key="ConnectedBrush" Color="#107C10"/>
        <SolidColorBrush x:Key="DisconnectedBrush" Color="#D13438"/>
        <SolidColorBrush x:Key="ConnectingBrush" Color="#FFA500"/>
    </Application.Resources>
</Application>
