<Window x:Class="ImageProcessor.Admin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:ImageProcessor.Admin.ViewModels"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="Image Processor Admin"
        Width="1400"
        Height="900"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding ClearTemporaryFilesCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <GroupBox Grid.Row="0" Header="Image Processor Admin" Margin="4,4,4,2" Padding="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Ellipse Fill="{Binding ConnectionStateFill}"
                       Width="12" Height="12"
                       VerticalAlignment="Center"
                       Margin="0,0,6,0"/>
                <TextBlock Text="接続状態" VerticalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <!-- キーワードセクション -->
        <GroupBox Grid.Row="1" Header="検索キーワード" Margin="4,2,4,2" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- コントロールパネル -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="受信開始"
                          Command="{Binding StartReceivingKeywordsCommand}"
                          Margin="0,0,8,0" Padding="12,4"/>
                    <Button Content="停止"
                          Command="{Binding StopReceivingKeywordsCommand}"
                          Margin="0,0,24,0" Padding="12,4"/>
                    <TextBlock Text="受信済み:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding PostedKeywords.Count}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- キーワードリスト -->
                <ScrollViewer Grid.Row="1"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding PostedKeywords}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1"
                                      CornerRadius="4" Margin="4,2" Padding="8,3">
                                    <TextBlock Text="{Binding Value}"
                                             FontSize="{Binding FontSize}"
                                             TextTrimming="CharacterEllipsis"
                                             MaxWidth="150"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- アクション -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                          HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="クリア"
                          Command="{Binding ClearKeywordsCommand}"
                          Padding="12,4"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 画像収集セクション -->
        <GroupBox Grid.Row="2" Header="画像収集" Margin="4,2,4,2" Padding="8"
                IsEnabled="{Binding Connection, Converter={StaticResource NullToBooleanConverter}, ConverterParameter=true}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button Content="収集開始"
                          Command="{Binding SearchImagesCommand}"
                          Margin="0,0,24,0" Padding="12,4"/>

                    <TextBlock Text="画像数:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox Text="{Binding ImagesPerKeyword}"
                           Width="60" VerticalAlignment="Center" Margin="0,0,16,0"/>

                    <TextBlock Text="検索スレッド:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox Text="{Binding ImageSearcherThreadCount}"
                           Width="60" VerticalAlignment="Center" Margin="0,0,16,0"/>

                    <TextBlock Text="DLスレッド:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox Text="{Binding ImageRetrieverThreadCount}"
                           Width="60" VerticalAlignment="Center" Margin="0,0,16,0"/>

                    <TextBlock Text="収集済み:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding OriginalImagePaths.Count, StringFormat='#,##0'}"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="クリア"
                      Command="{Binding ClearOriginalImagesCommand}"
                      Grid.Column="1"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Padding="12,4"/>
            </Grid>
        </GroupBox>

        <!-- 画像処理セクション -->
        <GroupBox Grid.Row="3" Header="画像処理" Margin="4,2,4,4" Padding="8"
                IsEnabled="{Binding Connection, Converter={StaticResource NullToBooleanConverter}, ConverterParameter=true}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- コントロールパネル -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="処理開始"
                          Command="{Binding StartProcessingCommand}"
                          Margin="0,0,16,0" Padding="12,4"/>

                    <RadioButton Content="シングル"
                               IsChecked="{Binding IsSingleThreadMode}"
                               GroupName="ThreadMode"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <RadioButton Content="マルチ"
                               IsChecked="{Binding IsMultiThreadMode}"
                               GroupName="ThreadMode"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <TextBlock Text="スレッド数:" VerticalAlignment="Center"
                             Margin="0,0,6,0"
                             IsEnabled="{Binding IsMultiThreadMode}"/>
                    <TextBox Text="{Binding ImageProcessorThreadCount}"
                           Width="60" VerticalAlignment="Center"
                           IsEnabled="{Binding IsMultiThreadMode}"
                           Margin="0,0,24,0"/>

                    <TextBlock Text="完了:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding ResultImagePaths.Count, StringFormat='#,##0'}"
                             VerticalAlignment="Center" Margin="0,0,24,0"/>
                    <TextBlock Text="{Binding ProcessingMilliseconds, StringFormat='#,##0 ms'}"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 処理済み画像ギャラリー -->
                <ScrollViewer Grid.Row="1"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ResultImagePaths}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1"
                                      Margin="4" Padding="2">
                                    <Image Source="{Binding}"
                                         Width="150"
                                         Height="150"
                                         Stretch="UniformToFill"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- アクション -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                          HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="クリア"
                          Command="{Binding ClearResultImagesCommand}"
                          Padding="12,4"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
